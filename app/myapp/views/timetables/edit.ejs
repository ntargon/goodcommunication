<h1>Edit Timetable</h1>

<h2>Timetable of <%= timetable.name %></h2>
<h3>Sunday</h3>
<div>
    <% timetable.sunday.forEach((lesson, index) => { %>
        <li>
            <%= `${lesson.type}: ${('0' + lesson.startTime.h).slice(-2)}:${('0' + lesson.startTime.m).slice(-2)} - ${('0' + lesson.endTime.h).slice(-2)}:${('0' + lesson.endTime.m).slice(-2)}` %>
            <a href="/timetables/<%= timetable._id %>/delete_lesson?index=<%= index %>&dow=sunday">delete</a>
        </li>
    <% }) %>
</div>
