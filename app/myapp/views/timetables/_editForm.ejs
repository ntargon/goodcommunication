<% let timeDigits = (str) => {let items = str.split(':'); return {h: items[0], m: items[1]};}; %>

<input type="button" value="ï¼‹" class="add" day="<%= day%>">
<div class="lesson-list">
    <% timetable[day].forEach(lesson => { %>
        <div day="<%= day%>">
            <input type="text" name="type_<%= day%>" value="<%= lesson.type%>" required>
            <input type="number" name="startTime_h_<%= day%>" min="0" max="23" value="<%= timeDigits(lesson.startTime).h%>" required>:                
            <input type="number" name="startTime_m_<%= day%>" min="0" max="59" value="<%= timeDigits(lesson.startTime).m%>" required>-                
            <input type="number" name="endTime_h_<%= day%>" min="0" max="23" value="<%= timeDigits(lesson.endTime).h%>" required>:                
            <input type="number" name="endTime_m_<%= day%>" min="0" max="59" value="<%= timeDigits(lesson.endTime).m%>" required>                
            <input type="button" value="-" class="del">
        </div>
    <% }) %>
</div>